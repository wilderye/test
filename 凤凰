<!-- JS 逻辑：读取全局变量并填充到上方 ID 中 -->
<script>
(function() {
    // 1. 读取本地脚本设置的全局变量
    const params = window.TH_PHOENIX_PARAMS || {};
    
    // 2. 获取数据（处理空值）
    const worldVal = params.world || '未知';
    const bodyVal = params.body || '未知';
    const currentVal = params.current || '未知';
    const bondVal = params.bond || '未知';

    // 3. 填充 DOM
    const setContent = (id, html) => {
        const el = document.getElementById(id);
        if (el) el.innerHTML = html;
    };

    setContent('ph-content-world', worldVal);
    setContent('ph-content-body', bodyVal);
    setContent('ph-content-current', currentVal);
    setContent('ph-content-bond', bondVal);
})();
</script>
